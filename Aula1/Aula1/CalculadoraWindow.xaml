<Window x:Class="Aula1.CalculadoraWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aula1"
        mc:Ignorable="d"
        Title="Calculadora" Height="450" Width="800">
    <Grid Width="827" Height="434">
        <TextBox x:Name="txtPeso" HorizontalAlignment="Left" Margin="330,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtAltura" HorizontalAlignment="Left" Margin="330,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Altura (metros)" HorizontalAlignment="Left" Margin="330,144,0,0" VerticalAlignment="Top"/>
        <Label Content="Peso (kg)" HorizontalAlignment="Left" Margin="330,74,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btCalcular" Content="Calcular" HorizontalAlignment="Left" Margin="330,326,0,0" VerticalAlignment="Top" Height="61" Width="120" Click="btCalcular_Click"/>

    </Grid>
</Window>
